{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Wails App",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "env": {},
      "args": [],
      "showLog": true,
      "preLaunchTask": "wails:build"
    },
    {
      "name": "Launch Wails Dev",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "env": {
        "WAILS_DEV": "true"
      },
      "args": ["-dev"],
      "showLog": true
    },
    {
      "name": "Debug Go Backend Only",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {},
      "args": [],
      "showLog": true,
      "stopOnEntry": false
    },
    {
      "name": "Attach to Go Process",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true
    }
  ]
}
