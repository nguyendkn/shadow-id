# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Go mod files
[go.{mod,sum}]
indent_style = tab
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Wails specific
[wails.json]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

# ESLint config
[eslint.config.{js,mjs}]
indent_style = space
indent_size = 2

# Next.js config
[next.config.{js,ts}]
indent_style = space
indent_size = 2

# PostCSS config
[postcss.config.{js,mjs}]
indent_style = space
indent_size = 2

# TypeScript config
[tsconfig.json]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,makefile}]
indent_style = tab
indent_size = 4

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2
